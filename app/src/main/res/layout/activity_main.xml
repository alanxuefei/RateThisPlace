<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">



                <LinearLayout
                    android:id="@+id/linearLayout_rewardbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:src="@drawable/dropdownmenubutton_black"
                android:cropToPadding="false"
                android:background="#FFFFFF"
                android:adjustViewBounds="false"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:onClick="showPopup"/>



        </android.support.v7.widget.Toolbar>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView8" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="212dp"
                android:layout_height="216dp"
                android:id="@+id/imageView_rate_this_place"
                android:layout_row="0"
                android:layout_column="0"


                android:clickable="true"
                android:onClick="clickImage_rate_this_place"
                android:src="@drawable/rate_this_place" />


        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="134dp"
                android:id="@+id/visitedplaces"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_activity_log"
                android:src="@drawable/visited_places"
                android:cropToPadding="false" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="134dp"
                android:id="@+id/reward"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_myreward"
                android:src="@drawable/my_reward"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID: Alan"
                android:id="@+id/textView_UserID" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>