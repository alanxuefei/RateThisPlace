<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
>


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabhost"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="ReturnButton">


                <LinearLayout
                    android:id="@+id/linearLayout_basic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="You earn 10 points"
                        android:textSize="20sp"
                        android:background="#FFFFFF"
                        android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/linearLayout_basic2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView_rewards"
                        android:src="@drawable/rewards_cup"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="10dp" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView_rewards2"
                        android:src="@drawable/rewards_cup"
                        android:cropToPadding="false"
                        android:background="#FFFFFF"
                        android:adjustViewBounds="false"
                        android:layout_gravity="left"
                        android:paddingRight="10dp" />

                </LinearLayout>

                </LinearLayout>





                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/returnbutton"
                    android:cropToPadding="false"
                    android:background="#FFFFFF"
                    android:adjustViewBounds="false"
                    android:layout_gravity="right"
                    android:paddingRight="10dp" />



            </android.support.v7.widget.Toolbar>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:progress="20"
                android:indeterminate="false" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout_basic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:orientation="vertical">

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>